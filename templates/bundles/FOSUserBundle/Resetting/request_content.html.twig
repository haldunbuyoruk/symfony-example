{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2>Forget Password</h2>
                    <hr>
                </div>
            </div>
            
        	<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                		<div class="form-group ">
                		   <label for="username">{{ 'resetting.request.username'|trans }}</label>
                		    <input type="text" placeholder="{{ 'resetting.request.username'|trans }}" id="username" name="username" required="required" class="form-control placeholder-no-fix" />
                		</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                		<div class="form-actions">
        			        <button type="submit" id="register-submit-btn" class="btn btn-success">{{ 'resetting.request.submit'|trans }}</button>
        			    </div>
                    </div>
                </div>
        	</form>
